<!DOCTYPE html>
<html lang="en-GB">
<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="veraPDF test results.">
  <meta name="author" content="veraPDF Consortium">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="Content-Security-Policy" content="sandbox allow-scripts; default-src 'self' *.openpreservation.org; child-src 'self' *.openpreservation.org; style-src 'self' 'unsafe-inline' ">
  <title>veraPDF dest data</title>
  <style media="screen" type="text/css">
    td {
      padding : 5px;
      font-size: 1.2em;
      font-weight: bold;
    }
    td.trace {
      padding : 0;
      font-size: 1em;
      font-weight: normal;
    }
    .pass {
      background-color: green;
      color: white;
    }
    .fail {
      background-color: red;
    }
    .undefined {
      background-color: orange;
    }

    </style>
<body>
  <h1>veraPDF Test Results : {{details.dateCreated}}</h1>
  {{#corpusDetails}}
  <div id="corpus">
    <h2>{{name}}</h2>
    {{description}}
  </div>
  {{/corpusDetails}}
  {{#validationProfile}}
  <div id="profile">
    <h3>{{#details}}{{name}}{{/details}}</h3>
  </div>
  {{/validationProfile}}
  {{#details}}
  <div id="dependencies">
    <h3>Dependencies</h3>
    {{#dependencies}}
      <div id="{{id}}">
        <p>{{id}} v{{version}}-{{buildDate}}</p>
      </div>
    {{/dependencies}}
  </div>
  {{/details}}
  <div id="exceptions">
    <h2>Exceptions</h2>
    <table>
    {{#exceptions}}
      <tr>
        <td class="fail">{{corpusItemId.name}}</td>
      </tr>
      <tr>
        <td class="trace">
          <pre>
          {{cause.message}}
          {{#cause.stackTrace}}
              {{className}}.{{methodName}}({{fileName}}:{{lineNumber}})
          {{/cause.stackTrace}}
          </pre>
        </td>
      </tr>
    {{/exceptions}}
    </table>
  </div>
  <div id="results">
    <h2>Results</h2>
  <table>
  {{#results}}
    <tr>
    {{#result}}
      <td class="{{testType}}">{{corpusItemName}}</td>
    {{/result}}
    </tr>
  {{/results}}
  </table>
  </div>
</body>
</html>
